<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:id="@+id/main">

    <!-- Restaurant Avatar -->
    <ImageView
        android:id="@+id/ivRestaurantAvatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:src="@drawable/undraw_breakfast_psiw"
        android:scaleType="centerCrop"
        android:background="@android:color/darker_gray"/>

    <!-- Restaurant Name -->
    <TextView
        android:id="@+id/tvRestaurantName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên Nhà Hàng"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_below="@id/ivRestaurantAvatar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"/>

    <!-- ScrollView for Rating and Feedback -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvRestaurantName"
        android:layout_marginTop="16dp"
        android:layout_above="@id/btnSubmit">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:layout_marginHorizontal="8dp">

            <!-- Subtitle for Food Rating -->
            <TextView
                android:id="@+id/tvSubtitleFood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phản hồi về món ăn không?"
                android:textSize="20sp"
                android:layout_gravity="center_horizontal"/>

            <!-- Food RatingBar -->
            <LinearLayout
                android:id="@+id/ratingFoodLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_gravity="center_horizontal">

                <RatingBar
                    android:id="@+id/rbFood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="5"
                    android:layout_marginEnd="8dp"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:progressTint="@android:color/holo_orange_light" />
            </LinearLayout>

            <!-- Comment for Food -->
            <EditText
                android:id="@+id/etCommentFood"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="16dp"
                android:hint="Ý kiến của bạn về món ăn ..."
                android:background="@android:drawable/edit_text"
                android:padding="8dp"/>

            <!-- Image Upload Section -->
            <ImageView
                android:id="@+id/ivUploadedFood"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="16dp"
                android:scaleType="centerCrop"
                android:background="@android:color/darker_gray"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btnUploadImageFood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:text="Đăng ảnh"/>

            <!-- Feedback Section -->
            <TextView
                android:id="@+id/tvSubtitleRestaurant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phản hồi về nhà hàng"
                android:textSize="20sp"
                android:layout_marginTop="24dp"
                android:layout_gravity="center_horizontal"/>

            <!-- Feedback RatingBar -->
            <LinearLayout
                android:id="@+id/ratingRestaurantLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_gravity="center_horizontal">

                <RatingBar
                    android:id="@+id/rbRestaurant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="5"
                    android:layout_marginEnd="8dp"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:progressTint="@android:color/holo_orange_light" />
            </LinearLayout>

            <!-- Feedback Comment -->
            <EditText
                android:id="@+id/etCommentRestaurant"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="16dp"
                android:hint="Ý kiến của bạn về quán..."
                android:background="@android:drawable/edit_text"
                android:padding="8dp"/>
        </LinearLayout>
    </ScrollView>

    <!-- Submit Button -->
    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:text="Xác nhận"
        android:textColor="@android:color/white"/>
</RelativeLayout>
