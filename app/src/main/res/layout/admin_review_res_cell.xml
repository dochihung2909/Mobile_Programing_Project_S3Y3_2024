<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?attr/selectableItemBackground"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/tvAdminReviewResId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Review ID: 12345"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvAdminReviewResUserId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User ID: 67890"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/tvAdminReviewResResId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restaurant ID: 54321"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/tvAdminReviewResComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is a sample comment. It should be descriptive and provide feedback about the restaurant."
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:layout_marginTop="8dp"/>

</LinearLayout>
