<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.FoodManagerActivity"
    android:padding="10dp"
    android:orientation="vertical">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_button"
        android:src="@drawable/quantum_ic_arrow_back_grey600_24"
        android:padding="10dp"
        android:id="@+id/btnBack"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm món ăn"
            android:id="@+id/btnAddFoodToRestaurant"
            android:backgroundTint="@android:color/holo_blue_light"/>
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/foodsContainer"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Chưa có món ăn nào. Hãy thêm món ăn"
                android:textColor="@color/textSecondaryColor"
                android:textSize="16dp"
                android:layout_marginVertical="20dp"
                android:id="@+id/tvEmptyFoods"/>


        </LinearLayout>

    </ScrollView>



</LinearLayout>